<tr class="admin_room_item">
  <td><%= index_of_page(@bills) + bill_counter %></td>
  <td><%= bill.status %></td>
  <td><%= number_with_delimiter bill.price, delimiter: "." %></td>
  <td><%= bill.created_at.strftime Settings.date_time %></td>
  <td class="btn-action">
    <%= link_to t(".detail"),
                admin_user_bill_bookings_path(@user, bill),
                class: "btn btn-block btn-info btn-action"
    %>
  </td>
</tr>
