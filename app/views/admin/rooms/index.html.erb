<% provide :title, t("global.all_room") %>
<div class="content-header">
  <div class="container-fluid">
    <%= link_to new_admin_room_path do %>
      <%= button_tag class: "btn btn-primary float-sm-right" do %>
        <i class="fas fa-plus"></i> <%= t ".add_room" %>
      <% end %>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_room" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover">
              <thead>
              <tr class="row">
                <th class="col-md-1"></th>
                <th class="col-md-2"></th>
                <th class="col-md-1 center"><%= t ".room_name" %></th>
                <th class="col-md-1 center"><%= t ".price" %></th>
                <th class="col-md-4 center"><%= t ".des" %></th>
                <th class="col-md-1 center"><%= t ".type" %></th>
                <th class="col-md-1 center"><%= t ".view" %></th>
                <th class="col-md-1"></th>
              </tr>
              </thead>
              <tbody>
                <%= render @rooms %>
              </tbody>
            </table>
            <%= paginate @rooms, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
