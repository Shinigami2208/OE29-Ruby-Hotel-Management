<% provide :title, t("global.all_client") %>
<div class="content-header">
  <div class="container-fluid">
    <div class="row">
      <%= form_tag admin_users_path, method: "get" do %>
        <label>
          <%= text_field_tag :bill, params[:bill], class: "form-control form-input", placeholder: t(".client_email"),  data: {url: admin_users_path} %>
        </label>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_room" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover text-center">
              <thead>
              <tr>
                <th></th>
                <th><%= t ".name" %></th>
                <th><%= t ".email" %></th>
                <th><%= t ".address" %></th>
                <th><%= t ".reservation_history" %></th>
              </tr>
              </thead>
              <tbody id ="user_view">
                <%= render @users %>
              </tbody>
            </table>
              <%= paginate @users, theme: "twitter-bootstrap-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag "view_client" %>
