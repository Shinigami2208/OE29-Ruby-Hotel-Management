<% provide :title, t(".list_view") %>
<div class="content-header">
  <div class="container-fluid">
    <button type="button" class="btn btn-primary float-sm-right" data-toggle="modal" data-target="#viewmodal">
      <i class="fas fa-plus"></i> <%= t ".add_view" %>
    </button>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= t ".list_view" %></h3>
          </div>
          <div class="card-body table-responsive p-0">
            <table class="table table-hover">
              <thead>
              <tr>
                <th><%= t ".id" %></th>
                <th><%= t ".view_name" %></th>
                <th></th>
                <th></th>
              </tr>
              </thead>
              <tbody>
                <%= render @views %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "admin/views/form" %>
